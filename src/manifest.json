{
  "name": "Page Load Time",
  "version": "1.0",
  "description": "Displays page load time in a toolbar",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "stopwatch.png",
    "default_popup": "info.html"
  },
  "content_scripts": [{
      "matches": ["*://*/*"],
      "js": ["timer.js"]
  }],
  "permissions": [
      "http://*/*",
      "tabs"
  ],
  "minimum_chrome_version": "6.0"
}