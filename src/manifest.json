{
  "name": "Page load time",
  "version": "3.0.0",
  "manifest_version": 2,
  "description": "Displays page load time in the toolbar",
  "background": {
    "scripts": ["polyfill.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "stopwatch22.png"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["performance.js"]
  }],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "webRequest",
    "*://*/*"
  ],
  "icons": {
    "16": "stopwatch16.png",
    "48": "stopwatch48.png",
    "128": "stopwatch128.png"
  }
}